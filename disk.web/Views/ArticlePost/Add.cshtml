@model disk.web.Models.Article.ArticlePostModels

@using (Html.BeginForm("Add", "ArticlePost", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

   <div class="form-group" style="margin-top: 15px;">
       <label class="control-label col-sm-2" for="CategoryIdsSelect">栏目</label>
            <div class="col-sm-10">
                <select id="CategoryIdsSelect" name="CategoryIdsSelect" class="easyui-combotree" data-options="url:'@Url.Action("JsonTree", "Category")',method:'post'" multiple style="width: 200px;"></select>
                <input type="hidden" id="CategoryIds" name="CategoryIds" value="" />
            </div>
        </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MetaTitle, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MetaTitle, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MetaKeywords, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MetaKeywords, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MetaDescription, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MetaDescription, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tags, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Tags, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Intro, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height: 100px;">
            @Html.TextAreaFor(m => m.Intro, new { @class = "form-control", @row = 5, @style = "height:100%;" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body, new {@class = "col-md-2 control-label"})
        <div class="col-md-10" style="height: 200px;">
            @Html.TextAreaFor(m => m.Body, new {@id = "editor", @rows = 10, @style = "height:85%;"})
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="添加文章" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/bundles/ueditor")
    <script type="text/javascript">
        var ue = UE.getEditor('editor');
    </script>
}




