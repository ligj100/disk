@{
    Layout = null;
}

@using StackExchange.Profiling
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/index")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="easyui-layout">
    <div data-options="region:'north'" style="height:80px"><h1>管理系统后台</h1></div>
    <div data-options="region:'center'">
        <div class="easyui-layout" data-options="fit:true">
            <div data-options="region:'west',collapsed:true,split:true,title:'系统菜单'" style="width: 180px">
                <ul id="easytree" class="easyui-tree" data-options="url:'@Url.Action("LoadMenu", "Home")',method:'post',animate:true,onClick:treeClick,dnd:true"></ul>
            </div>
            <div data-options="region:'center'">
                <div id="mainPanle">
                    <div id="tabs" class="easyui-tabs" fit="true" border="false" style="overflow: no-display; height: auto; min-height: 750px;">
                    </div>
                </div>
                <div style="clear: both;"></div>
                <hr/>
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/index")
</body>
</html>
